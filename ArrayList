package comHamann;
import java.util.Scanner;
import java.util.ArrayList;

public class ShoppingCart {

	public static void main(String[] args) {
		Scanner scnr = new Scanner(System.in);
		ArrayList<Double> prices = new ArrayList<Double>();
		String choice = scnr.nextLine();
		boolean tf = true;
		while (tf == true) {
		if (choice.equals("1")) {
			System.out.print("Enter the price of the product you'd like to add");
			double product_price = scnr.nextDouble();
			prices.add(product_price);
		}
		else if (choice.equals("2")) {
			System.out.print("Enter the price of the product you'd like to remove");
			double product_price = scnr.nextDouble();
			prices.remove(product_price);
		}
		else if (choice.equals("3")) {
			for (int i = 0; i < prices.size(); i++) {
				System.out.print(prices.get(i));
			}
		}
		else if (choice.equals("4")) {
			for (int i = 0; i < prices.size(); i++) {
				double total = 0.0;
				total = total + prices.get(i);
				System.out.print("The total is " + total);
			}
		}
		else if (choice.equals("5")) {
			tf = false;
		}
		}

	}

}
